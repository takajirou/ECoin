{
    "compilerOptions": {
        "jsx": "react-native",
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "moduleResolution": "node",
        "allowJs": true,
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./app/*"],
            "@components/*": ["./components/*"]
        }
    },
    "extends": "expo/tsconfig.base",
    "include": ["**/*.ts", "**/*.tsx"]
}
